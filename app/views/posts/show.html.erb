<h1>投稿内容</h1>

<!-- セキュリティも考慮したhtmlが自動生成される -->
<%= form_with model: @post, html: {class: "form-container" } do |form| %>
    <div class="form-input">
        <%= form.label :title %><br>
            <%= form.text_field :title, readonly:true %>
    </div>

    <div class="form-input">
        <%= form.label :content %><br>
            <%= form.text_area :content, readonly:true %>
    </div>

    <div>
        <%= link_to "戻る", posts_path, class: "link-button" %>
    </div>

<% end %>
